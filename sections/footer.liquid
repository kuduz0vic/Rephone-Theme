<footer>
  <div class="container">
      <div class="customer-support mobile-line-after">
          <div class="row">
              <div class="left-side col-12 col-lg-8">
                  <h2>{{section.settings.footer-title}}</h2>
                  <div class="col-12 col-md-10 p-0">
                    {{section.settings.footer-text}}
                  </div>

                  <div class="row mt-3">
                      <div class="col-12 col-lg-6 contact">
                          <div class="call">
                              <i class="fal fa-phone"></i>
                              <p><a href="tel:085 1301 646">{{section.settings.number}}</a></p>
                          </div>
                          <!--
                          <div class="ml-3 whatsapp">
                              <i class="fab fa-whatsapp"></i>
                              <p>085 1301 646</p>
                          </div>
                          -->
                      </div>
                  </div>
                  <div class="timestamp mt-1 mb-3 mb-lg-1 col-8 col-md-12 p-0 pb-lg-3">
                      <p>{{section.settings.time}}</p>
                      
                  </div>
                  <div class="img d-lg-none"></div>
              </div>
              <div class="col-4 right-side d-none d-lg-block">
                  <div class="img"></div>
              </div>
          </div>
      </div>

      <div class="socials-container">
          <div class="row">
              <div class="logo col-6 col-md-2">
                  <div class="img" style="background: url({{section.settings.logo | img_url: 'master'}}) no-repeat center;background-size: contain;"></div>
              </div>
              <div class="socials col-6 col-md-2">
                  <a href="https://www.facebook.com/rephonenl" rel="nofollow" target="_blank" style="display:block; margin-right: 10px;"><i class="fab fa-facebook-f"></i></a>
                  <a href="https://www.instagram.com/rephone.nl/" target="_blank" rel="nofollow"><i class="fab fa-instagram"></i></a>
              </div>
              <div class="mt-3 mt-md-0 payment-methods col-12 col-md-5 offset-md-3">
                  <div class="img"></div>
              </div>
          </div>
      </div>



      <div class="footer-content">
          <div class="row">
              <div class="col-12 col-lg-6">
                  <div class="row flex-column-reverse flex-lg-row">
                      <div class="col-12 col-lg-5 mt-3 mt-lg-0">
                          <h3>{{section.settings.menu-title}}</h3>
                          {% for link in linklists[section.settings.menu].links -%}
                          <p><a href="{{link.url}}">{{link.title}}</a></p>
                          {% endfor %}
                          <div class="brands d-none d-lg-flex">
                              <div class="img d-none"></div>
                              <div class="img" style="background: url({{section.settings.secondary-logo | img_url: 'master'}}) no-repeat center;"></div>
                          </div>
                      </div>

                      <ul class="col-12 col-lg-7">
                          <h3>{{section.settings.collection-title}}</h3>
                          <ul class="list-unstyled row">
                            {% for collection in section.settings.collection_list %}
                                      <li class="list-item col-6"><a style="font-size: 14px;" href="{{ collection.url }}">{{ collection.title }}</a></li>
                                  {% endfor %}
                          </ul>
                  </div>
              </div>

              <div class="col-12 col-lg-6 mt-4 mt-lg-0 mb-4 mb-lg-0">
                  <div class="row">
                      <div class="col-12 col-sm-6">
                          <h3>Blog</h3>
                          {% for article in blog[section.settings.blog].articles %}
                          <p><a href="{{ article.url }}">{{ article.title }}</a></p>
                          {% endfor %}
                          <a href="{{ section.settings.blog-link }}" class="blue-underline">
                                  <p>Bekijk alle blogs</p> 
                                  <i class="far fa-arrow-right"></i> 
                              </a>
                        </div>
                      <div class="d-none d-lg-block mb-5 mt-4 mt-sm-0 col-12 col-sm-6 contact-details">
                          <h3>Contact</h3>
                          <div>
                              <i class="far fa-envelope"></i>
                              <p><a href="mailto:klantenservice@rephone.nl">{{section.settings.email}}</a></p>
                          </div>
                          <!--
                          <div>
                              <i class="fab fa-facebook-f"></i>
                              <p><a href="">rephone messenger</a></p>
                          </div>
                          -->
                          <div>
                              <i class="far fa-phone"></i>
                              <p><a href="tel:085 1301 646">{{section.settings.number}}</a></p>
                          </div>
                          <!--
                          <div class="whatsapp">
                              <i class="fab fa-whatsapp"></i>
                              <p>085 1301 646</p>
                          </div>
                          -->
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="container-fluid bottom-bar">
      <div class="container">
          <ul class="list">
            {% for link in linklists[section.settings.secondary-menu].links -%}
              <li><a href="{{link.url}}">{{link.title}}</a></li>
            {% endfor %}
          </ul>
      </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "footer",
  "limit": 1,
  "settings": [
    {
    "type": "text",
    "id": "footer-title",
    "label": "Footer title"
  },
  {
    "type": "richtext",
    "id": "footer-text",
    "label": "Footer text"
  },
  {
    "type": "text",
    "id": "number",
    "label": "Contact number"
  },
  {
    "type": "text",
    "id": "time",
    "label": "Working Time"
  },
  {
    "type": "image_picker",
    "id": "logo",
    "label": "Logo"
  },
  {
    "type": "image_picker",
    "id": "secondary-logo",
    "label": "Secondary Logo"
  },
    {
  "type": "link_list",
  "id": "menu",
  "label": "Menu"
  },
  {
    "type": "text",
    "id": "menu-title",
    "label": "Menu title"
  },
  {
    "type": "text",
    "id": "collection-title",
    "label": "Collection title"
  },
  {
  "type": "collection_list",
  "id": "collection_list",
  "label": "Collections"
    }, 
  {
    "type": "text",
    "id": "email",
    "label": "E-mail"
  },
  {
  "type": "link_list",
  "id": "secondary-menu",
  "label": "Menu"
  },
  {
  "type": "blog",
  "id": "blog",
  "label": "Blog"
},
{
  "type": "url",
  "id": "blog-link",
  "label": "Blog Link"
}
  ]
}
{% endschema %}