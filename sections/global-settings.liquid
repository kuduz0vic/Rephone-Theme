{%- schema -%}
  {
    "name": "Global Settings",
    "presets": [
      {
        "name": "Global Settings"
      }
    ],
    "blocks": [
      {
        "type": "swatch",
        "name": "Swatch",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Color name"
          }, {
            "type": "color",
            "id": "code",
            "label": "Color code"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "OR image"
          }
        ]
      }
    ]
  }
{%- endschema -%}

<style>
  {% for block in section.blocks %}
    {% if block.type == 'swatch'%}
          .swatch-{{ block.settings.name | downcase }} {
            {% if block.settings.image != blank %}
      background: url('{{ block.settings.image | img_url: '100x' }}') !important;
    {% else %}
      background: {{ block.settings.code }}
       !important;
    {% endif %}
    background-size: cover !important;
  }

  .swatch-{{ block.settings.name | downcase }}> span {
    color: transparent !important;
  }
{% endif %}
{% endfor %}
</style>